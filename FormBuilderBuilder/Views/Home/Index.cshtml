@model FormBuilderBuilder.Models.HomeViewModel

@{
    ViewData["Title"] = "Header";
}

<div class="row">
    <div class="col-md-6">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h2 class="govuk-fieldset__heading">
                Form basics

            </h2>
        </legend>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="govuk-label govuk-label--m" for="FormName">
                    FormName
                </label>
                <div class="govuk-input__wrapper">
                    <input autocomplete="FormName" class="govuk-input govuk-input--width-20" id="FormName" maxlength="100" name="FormName" type="text" value="">
                </div>
                <span asp-validation-for="FormName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="govuk-label govuk-label--m" for="BaseURL">
                    BaseURL
                </label>
                <div class="govuk-input__wrapper">
                    <input autocomplete="BaseURL" class="govuk-input govuk-input--width-20" id="BaseURL" maxlength="100" name="BaseURL" type="text" value="">
                </div>
                <span asp-validation-for="BaseURL" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="govuk-label govuk-label--m" for="FirstPageSlug">
                    FirstPageSlug
                </label>
                <div class="govuk-input__wrapper">
                    <input autocomplete="FirstPageSlug" class="govuk-input govuk-input--width-20" id="FirstPageSlug" maxlength="100" name="FirstPageSlug" type="text" value="">
                </div>
                <span asp-validation-for="FirstPageSlug" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Start the form" class="govuk-button" />
            </div>
        </form>
    </div>
</div>

<script>

    window.onload = function () {
        var src = document.getElementById("FormName"),
            dst = document.getElementById("BaseURL");
        src.addEventListener('input', function () {
            dst.value = src.value.replace(" ", "-").replace(" ", "-").replace(" ", "-").replace(" ", "-").replace(" ", "-").replace(" ", "-").replace(" ", "-").replace(" ", "-");

        });
    };
</script>