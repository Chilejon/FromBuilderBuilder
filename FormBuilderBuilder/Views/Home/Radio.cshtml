@model FormBuilderBuilder.Models.RadioViewModel

@{
    ViewData["Title"] = "Radio";
}

<h1>Radio</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Radio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageSlug" class="control-label"></label>
                <input asp-for="PageSlug" class="form-control" />
                <span asp-validation-for="PageSlug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label"></label>
                <input asp-for="QuestionID" class="form-control" />
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomValidationMessage" class="control-label"></label>
                <input asp-for="CustomValidationMessage" class="form-control" />
                <span asp-validation-for="CustomValidationMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hint" class="control-label"></label>
                <input asp-for="Hint" class="form-control" />
                <span asp-validation-for="Hint" class="text-danger"></span>
            </div>
            Optional
            <div class="govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input"
                           type="radio"
                           value="true"
                           name="Optional"
                           id="Optional-0" />

                    <label class="govuk-label govuk-radios__label"
                           for="Optional-0">
                        True
                    </label>

                </div>
            </div>

            <div class="govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input"
                           type="radio"
                           value="false"
                           name="Optional"
                           id="Optional-1" />

                    <label class="govuk-label govuk-radios__label"
                           for="Optional-1">
                        False
                    </label>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Option1Text" class="control-label"></label>
                <input asp-for="Option1Text" class="form-control" />
                <span asp-validation-for="Option1Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option1Value" class="control-label"></label>
                <input asp-for="Option1Value" class="form-control" />
                <span asp-validation-for="Option1Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option2Text" class="control-label"></label>
                <input asp-for="Option2Text" class="form-control" />
                <span asp-validation-for="Option2Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option2Value" class="control-label"></label>
                <input asp-for="Option2Value" class="form-control" />
                <span asp-validation-for="Option2Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoPageSlug" class="control-label"></label>
                <input asp-for="GoPageSlug" class="form-control" />
                <span asp-validation-for="GoPageSlug" class="text-danger"></span>
            </div>
            <input asp-for="TheJSON" hidden class="form-control" value="@Model.TheJSON" />

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
