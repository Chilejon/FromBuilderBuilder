@using Newtonsoft.Json
@model FormBuilderBuilder.Models.DisplayJSONViewModel

@{
    ViewData["Title"] = "DisplayJSON";
}

<h1>Display the JSON</h1>


@*<br />
<pre>
    @Html.Raw(Newtonsoft.Json.Linq.JValue.Parse(Model.DisplayJSON).ToString(Newtonsoft.Json.Formatting.Indented))
</pre>*@





<div class="row">
    <div class="col-md-6">
        <form asp-action="DisplayJSON">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <textarea asp-for="DisplayJSON" name="DisplayJSON" rows="1000" cols="200">
                    @Model.DisplayJSON    
                </textarea>
                <input asp-for="TheJSON" hidden class="form-control" value="@ViewBag.TheJson" />
                @*<input asp-for="DisplayJSON" rows="1000" cols="200" class="form-control" />*@
            </div>
            
        </form>
    </div>
</div>